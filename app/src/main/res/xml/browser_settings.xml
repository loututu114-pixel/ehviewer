<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="搜索引擎设置">
        <ListPreference
            android:key="pref_default_search_engine"
            android:title="默认搜索引擎"
            android:summary="选择默认的搜索引擎"
            android:entries="@array/search_engine_entries"
            android:entryValues="@array/search_engine_values"
            android:defaultValue="google" />
    </PreferenceCategory>

    <PreferenceCategory android:title="内容设置">
        <SwitchPreference
            android:key="pref_enable_ad_blocking"
            android:title="启用广告拦截"
            android:summary="拦截网页中的广告内容"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="pref_enable_javascript"
            android:title="启用JavaScript"
            android:summary="允许网页运行JavaScript代码"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="pref_enable_images"
            android:title="自动加载图片"
            android:summary="自动加载网页中的图片"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="下载与存储">
        <Preference
            android:key="pref_manage_downloads"
            android:title="下载管理"
            android:summary="查看和管理下载的文件" />
    </PreferenceCategory>

    <PreferenceCategory android:title="隐私与安全">
        <Preference
            android:key="pref_clear_browser_data"
            android:title="清除浏览器数据"
            android:summary="清除浏览历史、缓存和Cookie" />
    </PreferenceCategory>

    <PreferenceCategory android:title="浏览器设置">
        <Preference
            android:key="pref_set_as_default_browser"
            android:title="设为默认浏览器"
            android:summary="将EhViewer设置为默认浏览器" />

        <ListPreference
            android:key="pref_text_size"
            android:title="文字大小"
            android:summary="调整网页文字显示大小"
            android:entries="@array/text_size_entries"
            android:entryValues="@array/text_size_values"
            android:defaultValue="normal" />

        <SwitchPreference
            android:key="pref_desktop_mode"
            android:title="桌面模式"
            android:summary="以桌面版网页显示"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="关于">
        <Preference
            android:key="pref_about_browser"
            android:title="关于浏览器"
            android:summary="版本信息和帮助" />
    </PreferenceCategory>

</PreferenceScreen>
