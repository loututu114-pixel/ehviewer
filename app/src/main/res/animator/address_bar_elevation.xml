<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 聚焦状态 -->
    <item android:state_focused="true">
        <set android:duration="200" android:interpolator="@android:interpolator/fast_out_slow_in">
            <objectAnimator
                android:propertyName="cardElevation"
                android:valueFrom="2dp"
                android:valueTo="8dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="strokeWidth"
                android:valueFrom="1dp"
                android:valueTo="2dp"
                android:valueType="intType" />
        </set>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <set android:duration="200" android:interpolator="@android:interpolator/fast_out_slow_in">
            <objectAnimator
                android:propertyName="cardElevation"
                android:valueFrom="8dp"
                android:valueTo="2dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="strokeWidth"
                android:valueFrom="2dp"
                android:valueTo="1dp"
                android:valueType="intType" />
        </set>
    </item>
</selector>