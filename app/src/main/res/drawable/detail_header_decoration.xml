<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 装饰性星星 -->
    <item
        android:left="20dp"
        android:top="40dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_yellow" />
            <size android:width="6dp" android:height="6dp" />
        </shape>
    </item>

    <item
        android:left="120dp"
        android:top="60dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_pink" />
            <size android:width="4dp" android:height="4dp" />
        </shape>
    </item>

    <item
        android:left="250dp"
        android:top="30dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_blue" />
            <size android:width="5dp" android:height="5dp" />
        </shape>
    </item>

    <item
        android:right="100dp"
        android:top="70dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_yellow" />
            <size android:width="7dp" android:height="7dp" />
        </shape>
    </item>

    <!-- 装饰性线条 -->
    <item
        android:left="0dp"
        android:top="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cartoon_accent_pink" />
            <size android:height="1dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:top="120dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cartoon_accent_blue" />
            <size android:height="1dp" />
        </shape>
    </item>
</layer-list>
