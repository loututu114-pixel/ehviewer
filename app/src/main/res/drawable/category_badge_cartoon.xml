<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_medium" />
            <gradient
                android:startColor="@color/cartoon_accent_pink"
                android:endColor="@color/cartoon_accent_blue"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>

    <!-- 装饰性边框 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_medium" />
            <stroke
                android:width="2dp"
                android:color="@color/cartoon_accent_yellow" />
        </shape>
    </item>

    <!-- 卡通装饰点 -->
    <item
        android:left="4dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_yellow" />
            <size android:width="3dp" android:height="3dp" />
        </shape>
    </item>

    <item
        android:right="4dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="3dp" android:height="3dp" />
        </shape>
    </item>

</layer-list>
