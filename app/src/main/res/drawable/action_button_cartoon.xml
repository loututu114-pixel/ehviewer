<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_medium" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- 装饰性边框 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_medium" />
            <stroke
                android:width="1dp"
                android:color="@color/modern_primary" />
        </shape>
    </item>

    <!-- 卡通装饰点 -->
    <item
        android:left="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/modern_accent" />
            <size android:width="2dp" android:height="2dp" />
        </shape>
    </item>

    <item
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/modern_secondary" />
            <size android:width="2dp" android:height="2dp" />
        </shape>
    </item>
</layer-list>
