<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_large" />
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimaryDark"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>

    <!-- 装饰性边框 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_large" />
            <stroke
                android:width="2dp"
                android:color="@color/cartoon_accent_yellow" />
        </shape>
    </item>

    <!-- 卡通装饰星星 -->
    <item
        android:left="4dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_yellow" />
            <size android:width="4dp" android:height="4dp" />
        </shape>
    </item>

    <item
        android:right="4dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/cartoon_accent_pink" />
            <size android:width="4dp" android:height="4dp" />
        </shape>
    </item>

    <!-- 装饰性线条 -->
    <item
        android:left="0dp"
        android:top="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cartoon_accent_blue" />
            <size android:height="1dp" />
        </shape>
    </item>
</layer-list>
