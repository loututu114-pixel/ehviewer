<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 微妙的渐变遮罩 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FFFFFF"
                android:endColor="#0A000000"
                android:type="linear"
                android:angle="90" />
        </shape>
    </item>

    <!-- 装饰性圆形元素 -->
    <item
        android:left="20dp"
        android:top="30dp"
        android:right="60dp"
        android:bottom="70dp">
        <shape android:shape="oval">
            <solid android:color="#08FFFFFF" />
        </shape>
    </item>

    <item
        android:left="80dp"
        android:top="60dp"
        android:right="120dp"
        android:bottom="100dp">
        <shape android:shape="oval">
            <solid android:color="#05FFFFFF" />
        </shape>
    </item>
</layer-list>
