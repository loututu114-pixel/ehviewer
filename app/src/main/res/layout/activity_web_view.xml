<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/web_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 顶部地址栏区域 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="2dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Chrome风格智能地址栏 -->
        <com.hippo.ehviewer.ui.browser.SmartAddressBarWidget
            android:id="@+id/smart_address_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- 搜索/访问按钮 -->
        <ImageButton
            android:id="@+id/go_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="搜索/访问"
            android:src="@drawable/ic_search"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top_bar"
        android:background="?android:attr/listDivider" />

    <!-- Smart Tips 容器 -->
    <ScrollView
        android:id="@+id/smart_tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:background="?android:attr/colorBackground"
        android:elevation="4dp"
        android:visibility="gone"
        android:maxHeight="200dp">

        <LinearLayout
            android:id="@+id/smart_tips_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />

    </ScrollView>

    <!-- 主内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/smart_tips_container"
        android:layout_above="@id/bottom_bar">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Loading State View -->
        <include
            android:id="@+id/loading_state_view"
            layout="@layout/loading_state_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </FrameLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/divider"
        android:progressDrawable="@drawable/progress_horizontal"
        android:visibility="gone" />

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="8dp">

        <!-- 主页按钮 -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="主页"
            android:src="@drawable/ic_home"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 历史按钮 -->
        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="历史"
            android:src="@drawable/ic_history"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 书签按钮 -->
        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="书签"
            android:src="@drawable/ic_bookmark_border"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 多窗口按钮 -->
        <ImageButton
            android:id="@+id/tabs_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="多窗口"
            android:src="@drawable/ic_tab"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 设置按钮 -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="设置"
            android:src="@drawable/ic_settings"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

</RelativeLayout>
