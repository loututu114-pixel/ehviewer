<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <!-- 标题栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="?attr/toolbarPopupTheme"
        android:elevation="4dp" />

    <!-- 地址栏区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="2dp">

        <!-- 地址栏 -->
        <EditText
            android:id="@+id/url_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/address_bar_background"
            android:drawableStart="@drawable/v_magnify_x24"
            android:drawablePadding="8dp"
            android:hint="搜索或输入网址"
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary" />

        <!-- 刷新按钮 -->
        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="刷新"
            android:src="@drawable/v_refresh_dark_x24"
            android:tint="?android:attr/textColorPrimary" />

    </LinearLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:progress="0"
        android:max="100"
        android:progressTint="?android:attr/colorAccent"
        android:visibility="gone" />

    <!-- WebView -->
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 底部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/windowBackground"
        android:orientation="horizontal"
        android:padding="4dp"
        android:elevation="4dp">

        <!-- 后退 -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="后退"
            android:src="@drawable/v_arrow_left_dark_x24"
            android:tint="?android:attr/textColorPrimary" />

        <!-- 前进 -->
        <ImageButton
            android:id="@+id/forward_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="前进"
            android:src="@drawable/v_arrow_left_dark_x24"
            android:rotation="180"
            android:tint="?android:attr/textColorPrimary" />

        <!-- 主页 -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="主页"
            android:src="@drawable/v_homepage_black_x24"
            android:tint="?android:attr/textColorPrimary" />

        <!-- 标签页 -->
        <ImageButton
            android:id="@+id/tabs_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="标签页"
            android:src="@drawable/ic_baseline_subscriptions_24"
            android:tint="?android:attr/textColorPrimary" />

        <!-- 菜单 -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="菜单"
            android:src="@drawable/v_dots_vertical_secondary_dark_x24"
            android:tint="?android:attr/textColorPrimary" />

    </LinearLayout>

</LinearLayout>
