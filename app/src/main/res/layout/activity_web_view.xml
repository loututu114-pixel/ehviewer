<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- 顶部地址栏区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="2dp">

        <!-- 地址栏 -->
        <EditText
            android:id="@+id/address_bar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edit_text_background"
            android:hint="输入网址或搜索内容"
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:drawablePadding="8dp" />

        <!-- 搜索/访问按钮 -->
        <ImageButton
            android:id="@+id/go_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="搜索/访问"
            android:src="@drawable/ic_search"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <!-- 主内容区域 -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/progress_horizontal"
        android:visibility="gone" />

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="8dp">

        <!-- 主页按钮 -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="主页"
            android:src="@drawable/ic_home"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 历史按钮 -->
        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="历史"
            android:src="@drawable/ic_history"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 书签按钮 -->
        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="书签"
            android:src="@drawable/ic_bookmark_border"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 多窗口按钮 -->
        <ImageButton
            android:id="@+id/tabs_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="多窗口"
            android:src="@drawable/ic_tab"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 设置按钮 -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="设置"
            android:src="@drawable/ic_settings"
            android:tint="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>
