<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/web_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Chrome Material Design 3 地址栏区域 -->
    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Chrome Omnibox容器 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/omnibox_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/chrome_omnibox_bg"
            app:strokeWidth="1dp"
            app:strokeColor="@color/chrome_omnibox_stroke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="6dp">

                <!-- 安全/协议图标 -->
                <ImageView
                    android:id="@+id/security_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_security"
                    android:tint="@color/chrome_icon_tint" />

                <!-- Chrome Omnibox 输入框 -->
                <EditText
                    android:id="@+id/omnibox_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="搜索 Google 或输入网址"
                    android:textSize="14sp"
                    android:textColor="@color/chrome_text_primary"
                    android:textColorHint="@color/chrome_text_secondary"
                    android:singleLine="true"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:selectAllOnFocus="true"
                    android:paddingEnd="6dp" />

                <!-- Chrome 清除按钮 -->
                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_clear_chrome"
                    android:tint="@color/chrome_icon_tint"
                    android:contentDescription="清除"
                    android:visibility="gone"
                    android:layout_marginEnd="2dp"
                    android:padding="8dp" />

                <!-- Chrome 收藏按钮 -->
                <ImageButton
                    android:id="@+id/bookmark_button_chrome"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_bookmark_border"
                    android:tint="@color/chrome_icon_tint"
                    android:contentDescription="添加书签"
                    android:layout_marginEnd="2dp"
                    android:padding="8dp" />

                <!-- Chrome 搜索按钮 -->
                <ImageButton
                    android:id="@+id/search_button_chrome"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="@color/chrome_icon_tint"
                    android:contentDescription="搜索"
                    android:layout_marginEnd="2dp"
                    android:padding="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        
        <!-- 地址栏内嵌进度条 -->
        <ProgressBar
            android:id="@+id/address_bar_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignBottom="@id/omnibox_container"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#E0E0E0" />

    </FrameLayout>


    <!-- 主内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_bar"
        android:layout_marginTop="2dp">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Loading State View -->
        <include
            android:id="@+id/loading_state_view"
            layout="@layout/loading_state_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </FrameLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/top_bar"
        android:visibility="gone" />

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:elevation="2dp">

        <!-- 主页按钮 -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="主页"
            android:src="@drawable/ic_home"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:layout_margin="2dp" />

        <!-- 历史按钮 -->
        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="历史"
            android:src="@drawable/ic_history"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:layout_margin="2dp" />

        <!-- 书签按钮 -->
        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="书签"
            android:src="@drawable/ic_bookmark_border"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:layout_margin="2dp" />

        <!-- 多窗口按钮 -->
        <ImageButton
            android:id="@+id/tabs_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="多窗口"
            android:src="@drawable/ic_tab"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:layout_margin="2dp" />

        <!-- 设置按钮 -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="设置"
            android:src="@drawable/ic_settings"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:layout_margin="2dp" />

    </LinearLayout>

    <!-- 全屏视频容器 -->
    <FrameLayout
        android:id="@+id/fullscreen_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" />

</RelativeLayout>
