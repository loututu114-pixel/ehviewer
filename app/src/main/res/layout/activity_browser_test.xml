<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_test_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试结果将在这里显示..."
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_test_default_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛠️ 测试设置默认浏览器"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_shortcut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 测试创建桌面快捷方式"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_browser_launch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚀 测试启动Eh浏览器"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_app_dominance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👑 查看应用统治力状态"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</LinearLayout>
