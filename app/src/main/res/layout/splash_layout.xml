<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Logo容器 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_xxxlarge">

        <!-- 应用图标 -->
        <ImageView
            android:layout_width="@dimen/gallery_detail_thumb_width"
            android:layout_height="@dimen/gallery_detail_thumb_height"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="@dimen/spacing_large"
            android:alpha="0.9" />

        <!-- 应用名称 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TextAppearance.ModernTitle"
            android:textSize="@dimen/text_cartoon_title"
            android:textColor="@android:color/white"
            android:background="@drawable/cartoon_text_background"
            android:padding="@dimen/spacing_medium" />

        <!-- 标语 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现更多精彩内容"
            style="@style/TextAppearance.ModernSubtitle"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/spacing_small"
            android:alpha="0.9"
            android:background="@drawable/cartoon_text_background"
            android:padding="@dimen/spacing_small" />

    </LinearLayout>

    <!-- 加载指示器 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 进度条 -->
        <ProgressBar
            android:layout_width="@dimen/gallery_detail_thumb_width"
            android:layout_height="@dimen/progress_bar_height"
            android:indeterminateTint="@color/colorAccent"
            android:indeterminateTintMode="src_in"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- 加载文本 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在初始化..."
            style="@style/TextAppearance.ModernCaption"
            android:textColor="@android:color/white"
            android:alpha="0.8"
            android:background="@drawable/cartoon_text_background"
            android:padding="@dimen/spacing_xsmall" />

    </LinearLayout>

</LinearLayout>