<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- 文件名 -->
    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件名.apk"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="1"
        android:ellipsize="middle" />

    <!-- 进度信息行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- 进度百分比 -->
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:minWidth="40dp" />

        <!-- 文件大小 -->
        <TextView
            android:id="@+id/tv_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 MB / 10 MB"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="8dp" />

        <!-- 下载速度 -->
        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5 MB/s"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="?android:attr/colorAccent"
        android:progressBackgroundTint="?android:attr/colorControlNormal" />

    <!-- 状态和操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 状态文本 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下载中..."
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- 暂停/恢复按钮 -->
        <Button
            android:id="@+id/btn_pause_resume"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="暂停"
            android:textSize="12sp"
            android:minWidth="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="?android:attr/colorAccent"
            android:layout_marginEnd="8dp" />

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="取消"
            android:textSize="12sp"
            android:minWidth="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#FF5722" />

    </LinearLayout>

</LinearLayout>