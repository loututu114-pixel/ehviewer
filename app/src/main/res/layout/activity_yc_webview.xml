<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 顶部地址栏区域 (类似Chrome) -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingTop="4dp">

        <!-- 地址栏区域 - 优化样式 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical">

            <!-- 书签添加按钮 - 优化样式 -->
            <ImageButton
                android:id="@+id/bookmark_add_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_menu_add"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="添加书签"
                android:padding="6dp" />

            <!-- 地址栏 (Chrome风格) - 优化样式 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chrome_address_bar_background">

                <EditText
                    android:id="@+id/address_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="32dp"
                    android:background="@android:color/transparent"
                    android:hint="搜索或输入网址"
                    android:imeOptions="actionGo"
                    android:inputType="textUri|textWebEditText"
                    android:paddingStart="14dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:textCursorDrawable="@null" />

                <!-- SSL指示器 -->
                <ImageView
                    android:id="@+id/ssl_indicator"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_secure"
                    android:contentDescription="安全连接"
                    android:visibility="gone" />

                <!-- 清除按钮 - 优化样式 -->
                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="gone"
                    android:contentDescription="清除"
                    android:padding="2dp" />

            </RelativeLayout>

            <!-- 搜索按钮 - 优化样式 -->
            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_search"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="搜索"
                android:padding="6dp" />

        </LinearLayout>

        <!-- 页面标题和进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 页面标题 - 优化样式 -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="新标签页"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center_horizontal" />

            <!-- 进度条 - 优化样式 -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:progress="0"
                android:max="100"
                android:progressTint="@android:color/holo_blue_light"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- WebView容器 -->
    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/top_bar"
        android:background="@android:color/white" />

    <!-- 底部导航栏 (Chrome风格) - 优化样式 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="12dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!-- 返回按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bottom_back_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="返回"
                android:enabled="false"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- 标签页按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bottom_tabs_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="标签页"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签页"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- 历史记录按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bottom_history_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="历史记录"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- 菜单按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bottom_menu_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="菜单"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜单"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 隐藏的兼容性按钮 -->
    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/forward_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/history_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/stats_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/tabs_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/bookmark_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

</RelativeLayout>
