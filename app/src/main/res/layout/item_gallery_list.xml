<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_elevation"
    android:transitionName="gallery_item">

    <!-- 渐变背景遮罩 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_gradient_overlay"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <!-- 精美的缩略图容器 -->
        <FrameLayout
            android:layout_width="@dimen/gallery_list_thumb_width"
            android:layout_height="@dimen/gallery_list_thumb_height"
            android:layout_marginEnd="@dimen/spacing_medium">

            <com.hippo.ehviewer.widget.FixedThumb
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:maxAspect="1.333"
                app:minAspect="0.333"
                app:retryType="click"
                android:background="@drawable/thumb_background" />

            <!-- 缩略图边框装饰 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/thumb_border_decoration"
                android:layout_margin="1dp" />

        </FrameLayout>

        <!-- 精美的标题区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/thumb"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.ModernTitle"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@drawable/cartoon_text_background"
                android:padding="@dimen/spacing_small" />

            <!-- 装饰性分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginBottom="@dimen/spacing_xsmall"
                android:background="@drawable/title_separator" />

        </LinearLayout>

        <TextView
            android:id="@+id/uploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="@dimen/spacing_xsmall"
            style="@style/TextAppearance.ModernSubtitle"
            android:textStyle="italic"
            android:drawableLeft="@drawable/ic_person_small"
            android:drawablePadding="@dimen/spacing_xsmall" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_alignBottom="@id/thumb"
            android:layout_marginBottom="@dimen/spacing_small"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_xsmall"
            android:paddingRight="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_xsmall"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.ModernCaption"
            android:background="@drawable/category_badge_cartoon"
            android:gravity="center" />

        <com.hippo.ehviewer.widget.SimpleRatingView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/category"
            android:layout_alignLeft="@id/title"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/posted"
            style="@style/CardMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/thumb"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp" />

        <!-- 精美的信息状态栏 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/posted"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_medium"
            android:background="@drawable/info_badge_background"
            android:paddingLeft="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_xsmall"
            android:paddingRight="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_xsmall"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/downloaded"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="@dimen/spacing_xsmall"
                android:visibility="gone"
                app:srcCompat="@drawable/v_download_x16" />

            <ImageView
                android:id="@+id/favourited"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="@dimen/spacing_xsmall"
                android:visibility="gone"
                app:srcCompat="@drawable/v_heart_x16" />

            <TextView
                android:id="@+id/simple_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/spacing_small" />

            <TextView
                android:id="@+id/pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/colorSecondary" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
