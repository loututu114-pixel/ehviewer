<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_switcher_background">
    
    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/tab_switcher_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/toolbar_background"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标签页"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <!-- 隐私模式切换 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_incognito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="隐私模式"
            app:chipIcon="@drawable/ic_incognito"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeColor="@color/chip_stroke"
            app:chipStrokeWidth="1dp" />
        
        <!-- 关闭所有标签 -->
        <ImageButton
            android:id="@+id/btn_close_all"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_all"
            android:tint="@color/icon_tint" />
    </LinearLayout>
    
    <!-- 标签页网格 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tab_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_switcher_header"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical" />
    
    <!-- 新建标签页浮动按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_new_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/fab_background"
        app:tint="@android:color/white" />
    
    <!-- 空状态视图 -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.3"
            android:src="@drawable/ic_tab_empty" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="没有打开的标签页"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />
        
        <Button
            android:id="@+id/btn_new_tab_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="新建标签页"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>
    
</RelativeLayout>