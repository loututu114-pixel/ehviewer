<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <!-- 关闭按钮 -->
        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="关闭"
            android:src="@drawable/v_close_dark_x24"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="多标签管理"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 标签数量显示 -->
        <TextView
            android:id="@+id/tab_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="1 个标签"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:alpha="0.8" />

        <!-- 新建标签按钮 -->
        <ImageButton
            android:id="@+id/new_tab_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="新建标签"
            android:src="@drawable/ic_add"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- 菜单按钮 -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="更多"
            android:src="@drawable/v_dots_vertical_secondary_dark_x24"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 标签页类型切换 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="2dp">

        <!-- 普通标签页 -->
        <TextView
            android:id="@+id/normal_tabs_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="普通标签"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_web"
            android:drawablePadding="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <!-- 分割线 -->
        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/textColorSecondary"
            android:alpha="0.2" />

        <!-- 无痕标签页 -->
        <TextView
            android:id="@+id/incognito_tabs_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="无痕标签"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_lock"
            android:drawablePadding="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

    </LinearLayout>

    <!-- 分类和分组管理 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:orientation="vertical"
        android:elevation="1dp">

        <!-- 分类标签 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/category_tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:attr/colorBackground"
            app:tabMode="scrollable"
            app:tabGravity="start"
            app:tabIndicatorColor="?attr/colorPrimary"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabTextColor="?android:attr/textColorSecondary"
            app:tabIndicatorHeight="2dp"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Caption" />

        <!-- 分组筛选器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="?android:attr/colorBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分组："
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/group_spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/group_manage_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:tint="?attr/colorPrimary"
                android:contentDescription="管理分组"
                android:scaleType="centerInside"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 标签页列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tabs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- 空状态提示 -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_tabs"
            android:tint="?android:attr/textColorSecondary"
            android:alpha="0.4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="暂无标签页"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="点击 + 新建标签页开始浏览"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone">

        <!-- 全部关闭 -->
        <TextView
            android:id="@+id/close_all_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部关闭"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/v_close_dark_x24"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- 新建无痕标签 -->
        <TextView
            android:id="@+id/new_incognito_tab_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="无痕标签"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

</LinearLayout>