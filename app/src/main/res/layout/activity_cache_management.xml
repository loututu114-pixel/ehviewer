<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background">
    
    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- 缓存使用概览 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缓存使用情况"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总缓存："
                            android:textColor="@color/text_secondary" />
                        
                        <TextView
                            android:id="@+id/tv_total_cache_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0 MB"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:gravity="end" />
                    </LinearLayout>
                    
                    <ProgressBar
                        android:id="@+id/pb_cache_usage"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="30"
                        android:max="100" />
                    
                    <TextView
                        android:id="@+id/tv_offline_storage_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="存储空间: 0 GB / 0 GB"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- 离线模式设置 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离线设置"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    
                    <!-- 离线模式开关 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="离线模式"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="优先使用本地缓存内容"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                        
                        <Switch
                            android:id="@+id/switch_offline_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <!-- 自动缓存开关 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="自动缓存"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="自动缓存浏览的内容"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                        
                        <Switch
                            android:id="@+id/switch_auto_cache"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <!-- 智能清理开关 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="智能清理"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="缓存满时自动清理旧文件"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                        
                        <Switch
                            android:id="@+id/switch_smart_clean"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- 缓存策略 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缓存策略"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    
                    <RadioGroup
                        android:id="@+id/rg_cache_strategy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        
                        <RadioButton
                            android:id="@+id/rb_wifi_only"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="仅WiFi下缓存"
                            android:textColor="@color/text_primary" />
                        
                        <RadioButton
                            android:id="@+id/rb_always"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="总是缓存"
                            android:textColor="@color/text_primary" />
                        
                        <RadioButton
                            android:id="@+id/rb_smart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="智能缓存（推荐）"
                            android:checked="true"
                            android:textColor="@color/text_primary" />
                        
                        <RadioButton
                            android:id="@+id/rb_manual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="手动缓存"
                            android:textColor="@color/text_primary" />
                    </RadioGroup>
                    
                    <!-- 最大缓存大小 -->
                    <TextView
                        android:id="@+id/tv_max_cache_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="最大缓存: 500 MB"
                        android:textColor="@color/text_primary" />
                    
                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_max_cache_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="100"
                        android:valueTo="2000"
                        android:value="500"
                        android:stepSize="100" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- 分类缓存管理 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类缓存"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    
                    <!-- 图片缓存 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_image"
                            android:tint="@color/icon_tint" />
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="图片"
                            android:textColor="@color/text_primary" />
                        
                        <TextView
                            android:id="@+id/tv_image_cache_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textColor="@color/text_secondary" />
                        
                        <Button
                            android:id="@+id/btn_clear_images"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:text="清理"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>
                    
                    <!-- 视频缓存 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_video"
                            android:tint="@color/icon_tint" />
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="视频"
                            android:textColor="@color/text_primary" />
                        
                        <TextView
                            android:id="@+id/tv_video_cache_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textColor="@color/text_secondary" />
                        
                        <Button
                            android:id="@+id/btn_clear_videos"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:text="清理"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>
                    
                    <!-- 漫画缓存 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_book"
                            android:tint="@color/icon_tint" />
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="漫画"
                            android:textColor="@color/text_primary" />
                        
                        <TextView
                            android:id="@+id/tv_manga_cache_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textColor="@color/text_secondary" />
                        
                        <Button
                            android:id="@+id/btn_clear_manga"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:text="清理"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>
                    
                    <!-- 小说缓存 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_text"
                            android:tint="@color/icon_tint" />
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="小说"
                            android:textColor="@color/text_primary" />
                        
                        <TextView
                            android:id="@+id/tv_novel_cache_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textColor="@color/text_secondary" />
                        
                        <Button
                            android:id="@+id/btn_clear_novels"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:text="清理"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <Button
                    android:id="@+id/btn_smart_clean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="智能清理"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                
                <Button
                    android:id="@+id/btn_clear_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="清理所有缓存"
                    android:backgroundTint="@color/red_500"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>
            
            <!-- 清理进度 -->
            <LinearLayout
                android:id="@+id/ll_clearing_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">
                
                <TextView
                    android:id="@+id/tv_clearing_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在清理..."
                    android:textColor="@color/text_secondary" />
                
                <ProgressBar
                    android:id="@+id/pb_clearing"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>