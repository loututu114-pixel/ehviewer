<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码生成器"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Generated Password Display -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成的密码:"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_generated_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_password_display"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Abc123!@#Def456$%^" />

            <TextView
                android:id="@+id/tv_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="强度: 非常强"
                android:textColor="@android:color/holo_green_light"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Password Length -->
    <TextView
        android:id="@+id/tv_password_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长度: 16"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekbar_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="32"
        android:min="8"
        android:progress="16" />

    <!-- Character Types -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="包含字符类型:"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/cb_uppercase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大写字母 (A-Z)"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb_lowercase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小写字母 (a-z)"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数字 (0-9)"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb_symbols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="特殊符号 (!@#$%^&amp;*...)"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_generate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="重新生成"
            android:textColor="?android:attr/textColorPrimary" />

        <Button
            android:id="@+id/btn_copy"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="复制"
            android:textColor="?android:attr/textColorPrimary" />

        <Button
            android:id="@+id/btn_use"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="使用"
            android:textColor="?android:attr/textColorPrimary" />

    </LinearLayout>

</LinearLayout>
