<resources>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">?attr/toolbarColor</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat"></style>

    <!-- 🎨 卡通风格字体样式 -->
    <style name="TextAppearance.CartoonTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_cartoon_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cartoon_title_color</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:shadowColor">@color/cartoon_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CartoonSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_cartoon_subtitle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/cartoon_subtitle_color</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:shadowColor">@color/cartoon_shadow_light</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.CartoonCaption" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_cartoon_caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cartoon_caption_color</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- 按钮文本样式 -->
    <style name="TextAppearance.ButtonPrimary">
        <item name="android:textSize">@dimen/text_cartoon_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:shadowColor">@color/cartoon_shadow_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextAppearance.ButtonSecondary">
        <item name="android:textSize">@dimen/text_cartoon_button_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- 卡通按钮样式 -->
    <style name="TextAppearance.CartoonButton">
        <item name="android:textSize">@dimen/text_cartoon_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:shadowColor">@color/cartoon_shadow_light</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Progress View -->
    <style name="ProgressView">
        <item name="color">?attr/progressColor</item>
        <!--        <item name="android:background">@color/purple_a400</item>-->
        <item name="indeterminate">true</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ProgressView.Small">
        <item name="android:minWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
    </style>

    <style name="ProgressView.Large">
        <item name="android:minWidth">76dp</item>
        <item name="android:minHeight">76dp</item>
    </style>

    <style name="TextAppearance.CardTitle">
        <item name="android:textSize">@dimen/text_little_small</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CardTitle">
        <item name="android:textAppearance">@style/TextAppearance.CardTitle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TextAppearance.TopListTitle">
        <item name="android:textSize">@dimen/text_little_large</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TopListTitle">
        <item name="android:textAppearance">@style/TextAppearance.TopListTitle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">10</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="GotoMessageStyle">
        <item name="android:textAppearance">@style/TextAppearance.GotoMessageStyle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">10</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.GotoMessageStyle">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="TextAppearance.TopListItem">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TopListItem">
        <item name="android:textAppearance">@style/TextAppearance.TopListItem</item>
        <!--        <item name="android:ellipsize">end</item>-->
        <item name="android:maxLines">99</item>
        <item name="android:gravity">start</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextAppearance.CardMessage">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="CardMessage">
        <item name="android:textAppearance">@style/TextAppearance.CardMessage</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardMessageMultipleLines">
        <item name="android:textAppearance">@style/TextAppearance.CardMessage</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="TextAppearance.ReadProgress">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ReadProgress">
        <item name="android:textAppearance">@style/TextAppearance.ReadProgress</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- CategoryText -->
    <style name="CategoryText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/category_table_item_height</item>
        <item name="maskColor">@color/check_text_view_mask</item>
    </style>

    <style name="TextAppearance.CategoryTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/textColorThemeAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:textAppearance">@style/TextAppearance.CategoryTitle</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 现代化的按钮样式 -->
    <style name="ButtonInCard">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 新的按钮样式 -->
    <style name="ButtonPrimary">
        <item name="android:textAppearance">@style/TextAppearance.ButtonPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingLeft">@dimen/spacing_xlarge</item>
        <item name="android:paddingRight">@dimen/spacing_xlarge</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:textAppearance">@style/TextAppearance.ButtonSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonNewVersion">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ButtonInCard.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Slider">
        <item name="thickness">2dp</item>
        <item name="radius">6dp</item>
        <item name="color">?attr/widgetColorThemeAccent</item>
        <item name="textColor">@android:color/white</item>
        <item name="textSize">12sp</item>
        <item name="dark">false</item>
    </style>

    <style name="Slider.Dark">
        <item name="dark">true</item>
    </style>

    <style name="Indicating">
        <item name="indicatorHeight">1dp</item>
        <item name="indicatorColor">?attr/dividerColor</item>
    </style>

    <style name="Widget.Design.FloatingActionButton.Mini">
        <item name="fabSize">mini</item>
    </style>

    <style name="Guide.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/guideTitleColor</item>
    </style>

    <style name="Guide.Text" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?attr/guideTextColor</item>
    </style>

    <style name="Guide">
        <item name="sv_backgroundColor">?attr/guideBackgroundColor</item>
        <item name="sv_titleTextAppearance">@style/Guide.Title</item>
        <item name="sv_detailTextAppearance">@style/Guide.Text</item>
    </style>

    <!-- 现代化的卡片样式 -->
    <style name="CardView.Normal">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="cardMaxElevation">@dimen/elevation_high</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">?attr/contentColorPrimary</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="CardView.Reactive" parent="CardView.Normal">
        <item name="cardBackgroundColor">?attr/contentColorReactive</item>
    </style>

    <!-- 新增的现代化样式 -->
    <style name="CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/elevation_high</item>
        <item name="cardMaxElevation">@dimen/elevation_xhigh</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">?attr/contentColorPrimary</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
    </style>

    <style name="CardView.Rounded">
        <item name="cardCornerRadius">@dimen/radius_xlarge</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="cardMaxElevation">@dimen/elevation_medium</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">?attr/contentColorPrimary</item>
        <item name="contentPadding">@dimen/spacing_large</item>
    </style>

    <style name="ClipTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="textAllCaps">false</item>
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:fontFamily">@dimen/text_more_super_small</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="textColor">@android:color/white</item>
        <!--        <item name="android:textColor">@color/text_color_chip_state_list</item>-->
    </style>

    <style name="ThemeChangeButtonStyleLight" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="textColor">@color/colorAccent</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="ThemeChangeButtonStyleDark" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="textColor">@color/colorPrimary</item>
        <item name="backgroundColor">@color/grey_850</item>
    </style>

    <style name="ThemeChangeButtonStyleBlack" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="textColor">@color/colorPrimary</item>
        <item name="backgroundColor">@color/black</item>

    </style>

    <!-- 响应式文本样式 -->
    <style name="TextAppearanceBodyLargeResponsive">
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="TextAppearanceBodyMediumResponsive">
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- 响应式卡片样式 -->
    <style name="CardViewResponsive" parent="CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_max_elevation</item>
    </style>

    <!-- 网格项目响应式样式 -->
    <style name="GridItemResponsive">
        <item name="android:layout_margin">@dimen/spacing_medium</item>
    </style>

    <!--  组件动画  -->
    <style name="PopupWindow">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="Widget.Ehviewer.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Ehviewer.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


</resources>
